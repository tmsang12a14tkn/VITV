@model ArticleSeries

@{
    Layout = "../Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-lg-12">
        <div class="main-box">
            <header class="main-box-header clearfix">
                <h2>Bạn có chắc chắn muốn xóa series này?</h2>
            </header>
            <div class="main-box-body clearfix">
                @using (Html.BeginForm("Delete", "ArticleSeries", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "col-lg-2 control-label" })
                        <div class="col-lg-10 form-field-display">
                            @Html.DisplayFor(model => model.Name)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Articles, "Số bài viết", new { @class = "col-lg-2 control-label" })
                        <div class="col-lg-10 form-field-display">
                            @(Model.Articles == null ? "None" : Model.Articles.Count.ToString())
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-2">&nbsp;</div>
                        <div class="col-lg-10">
                            <span class="label label-danger label-large">Xóa Series này sẽ tự động xóa @Model.Articles.Count bài viết có liên quan trong Series. Bạn có chắc chắn muốn xóa không?</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-danger">Xóa</button>
                            @Html.ActionLink("Quay về trang quản lý", "Management")
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>