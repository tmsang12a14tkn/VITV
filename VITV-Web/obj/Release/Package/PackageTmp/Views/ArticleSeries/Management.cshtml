@model IEnumerable<ArticleSeries>

@{
    Layout = "../Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Quản lý chuyên mục bài viết";
}

<div class="row">
    <div class="col-lg-5">
        <div class="main-box clearfix">
            <header class="main-box-header clearfix">
                <h2 class="pull-left"><b>Tạo mới series</b></h2>
            </header>
            <div class="main-box-body clearfix">
                <div class="row">
                    @Html.Action("Create", "ArticleSeries")
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-7">
        @using (Html.BeginForm("ChangeOrder", "ArticleSeries", FormMethod.Post, null))
        {
            <div class="main-box clearfix">
                <header class="main-box-header clearfix">
                    <h2 class="pull-left">Danh sách series</h2>
                    @*<div class="filter-block pull-right">
                        <input type="submit" value="Lưu thứ tự sắp xếp" class="btn btn-success" />
                    </div>*@
                </header>
                <div class="main-box-body clearfix">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>&nbsp;</th>
                                    <th class="text-center"><span>Tên series</span></th>
                                    <th class="text-center"><span>Article</span></th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.Hidden("ids", item.Id)</td>
                                        <td>
                                            <a href="@Url.Action("Edit", new { id = item.Id })" class="table-link">
                                                @item.Name
                                            </a>
                                        </td>
                                        <td>@(item.Articles == null ? "None" : item.Articles.Count.ToString())</td>
                                        <td style="width: 15%;">
                                            <a href="@Url.Action("Details", new { id = item.Id })" class="table-link">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                    <i class="fa fa-list fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                            <a href="@Url.Action("Delete", new { id = item.Id })" class="table-link danger">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                    <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        }
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $(".table tbody").sortable(
            {
                update: function (event, ui) {
                    console.log(event);
                },
                change: function (event, ui) {
                    console.log(event);
                }
            });
        });

        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#photoView').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#photoinput").on('change', function () {
            readURL(this);
        });

        $('#sidebar-nav #articleMng').toggleClass("active");
        $('#sidebar-nav #articleMng').siblings().removeClass("active");

        $('#sidebar-nav a#ar-li-3').toggleClass("active");
        $('#sidebar-nav a#ar-li-3').parent().siblings().removeClass("active");
    </script>
}