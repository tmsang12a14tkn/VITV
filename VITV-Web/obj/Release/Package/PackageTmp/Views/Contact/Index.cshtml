@model Contact

@{
    ViewBag.Title = "Liên hệ | VITV";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="contact" class="row contact_area">
    <div class="row vline">
        <div class="container">
            <nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#contact_filter">
                            <i class="glyphicon glyphicon-chevron-right"></i>
                        </button>
                        <h3 class="navbar-brand">LIÊN HỆ</h3>
                    </div>
                    <div class="collapse navbar-collapse" id="contact_filter">
                        <ul class="nav nav-tabs navbar-right" role="tablist" id="maptabs">
                            <li role="presentation" class="active"><a href="#hn-map" role="tab" data-toggle="tab">Trụ sở Hà Nội</a></li>
                            <li role="presentation"><a href="#hcm-map" role="tab" data-toggle="tab">Chi nhánh Hồ Chí Minh</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <div class="row contact_content">
        <div class="row tab-content m4">
            <div role="tabpanel" class="tab-pane active" id="hn-map">
                <div id="hn-canvas"></div>
            </div>
            <div role="tabpanel" class="tab-pane" id="hcm-map">
                <div id="hcm-canvas"></div>
            </div>
        </div>
        <div class="row">
            <div class="container">
                <div class="col-md-8">
                    @using (Html.BeginForm("Index", "Contact", FormMethod.Post, new { @class = "form-group", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <div class="form-group title">
                            <label>Liên hệ với chúng tôi</label>
                        </div>
                        <div class="form-group info">
                            <label>Tel: +84(4) 2220 8288 - Email: vitv@vitv.vn</label>
                        </div>

                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Họ và tên" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>

                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @type = "email", placeholder = "Email" })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>

                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Tiêu đề" })
                            @Html.ValidationMessageFor(model => model.Title)
                        </div>

                        <div class="form-group">
                            @Html.TextAreaFor(model => model.ContactContent, new { @class = "form-control", placeholder = "Nội dung", style = "height:100px;resize: none;" })
                            @Html.ValidationMessageFor(model => model.ContactContent)
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-danger" value="Gửi" />
                        </div>
                    }
                </div>
                <div class="col-md-4">
                    <div class="row main">
                        <h4>Trụ sở Hà Nội</h4>
                        <p>Tầng 19, Tòa nhà VIT, 519 Kim Mã, Ba Đình,<br />Hà Nội, Việt Nam</p>
                        <p>Tel: +84 [4] 2220 8288</p>
                        <p>Fax: +84 [4] 2220 8289</p>
                        <p>Email: vitv@vitv.vn</p>
                    </div>
                    <div class="row">
                        <h4>Chi nhánh Hồ Chí Minh</h4>
                        <p>6-8 Phó Đức Chính, P. Nguyễn Thái Bình,<br />TP.HCM, Việt Nam</p>
                        <p>Tel: +84 [8] 3821 3288</p>
                        <p>Fax: +84 [8] 3281 3436</p>
                    </div>
                    <div class="row m3">
                        <ul class="list-inline">
                            <li><a href="https://twitter.com/kenhVITV" target="_blank"><img src="/Content/Images/tw.png" /></a></li>
                            <li><a href="https://www.facebook.com/VITV.Channel/" target="_blank"><img src="/Content/Images/fb.png" /></a></li>
                            <li><a href="https://www.youtube.com/c/vitvchannel" target="_blank"><img src="/Content/Images/yt.png" /></a></li>
                            <li><a href="https://plus.google.com/+VITVChannel" target="_blank"><img src="/Content/Images/gp.png" /></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- Contact Area -->

@section scripts{
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDfZTvpVyk_jLhRKuUN5VjmRlsg4k7gWJQ"></script>
    <script src="~/Scripts/contact.js"></script>
}