@model EmployeeModel

@{
    Layout = "../Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Chỉnh sửa";
}

<div class="row">
    <div class="col-lg-12">
        <div class="main-box">
            <header class="main-box-header clearfix">
                <h2><b>Chỉnh sửa</b></h2>
            </header>
            <div class="main-box-body clearfix">
                @using (Html.BeginForm("Edit", "Reporter", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
                {
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.Id)
                    @Html.Partial("_CreateOrEdit", Model)

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Hoàn thành</button>
                            @Html.ActionLink("Quay về trang quản lý", "Management")
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#photoView').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#photoinput").change(function () {
            readURL(this);
        });


