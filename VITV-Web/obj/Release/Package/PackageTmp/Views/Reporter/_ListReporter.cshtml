@model List<Employee>

@{
    List<Position> lstPositions = (List<Position>)ViewBag.positions;
}

@foreach (Employee e in Model)
{
    var position = lstPositions.Where(p => p.Id == e.PositionId).FirstOrDefault();
    <tr>
        <td>
            <img src="@e.ProfilePicture" alt="" width="70" height="70">
            <p style="word-wrap: break-word;font-size: 13px">@e.Name</p>
            <span class="user-subhead"><b>@(position != null ? position.Name : "")</b></span>
        </td>

        <td style="width: 20%;">

            <a href="/Reporter/Edit/@e.Id" class="table-link gray" title="Chỉnh sửa">
                <span class="fa-stack">
                    <i class="fa fa-square fa-stack-2x"></i>
                    <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                </span>
            </a>

            <a href="/Reporter/Delete/@e.Id" class="table-link danger" title="Xóa">
                <span class="fa-stack">
                    <i class="fa fa-square fa-stack-2x"></i>
                    <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                </span>
            </a>
        </td>
    </tr>
}


