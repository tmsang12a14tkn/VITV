
@{
    ViewBag.Title = "Quản lý hình nền";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">@ViewBag.Message</div>
}
<div class="row">
    <div class="col-lg-12">
        <div class="main-box">
            <header class="main-box-header clearfix">
                <h2>Quản lý hình nền</h2>
            </header>
            <div class="main-box-body clearfix">
                @using (Html.BeginForm("Management", "Background", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
                {
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.Label("Hình nền truyền hình trực tiếp (1920*643)", new { @class="col-lg-2" })
                        <div class="col-lg-10">
                            <img id="photoView1" width=640 height=214 src="" />
                            <input id="photoinput1" type="file" name="liveStreamBkgr" accept="image/jpeg">
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Hình nền video chiếu lại (1920*623)", new { @class = "col-lg-2" })
                        <div class="col-lg-10">
                            <img id="photoView2" width=640 height=207 src="" />
                            <input id="photoinput2" type="file" name="vodBkgr" accept="image/jpeg">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-success">Hoàn thành</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



@section Scripts
{
    <script>
        function readURL(input, output) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $(output).attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#photoinput1").change(function () {
            readURL(this, "#photoView1");
        });
        $("#photoinput2").change(function () {
            readURL(this, "#photoView2");
        });
    </script>
}