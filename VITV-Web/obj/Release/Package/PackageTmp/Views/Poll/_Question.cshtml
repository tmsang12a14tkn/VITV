        </div>
    </div>
    <div class="row poll_container_answer">
       
            @foreach (var answer in Model.Answers)
            {
                <div class="row poll_single_row">
                    @if (Model.MultipleChoice)
                    {

                        if (!string.IsNullOrEmpty(answer.Image))
                        {
                            <div class="col-xs-1">
                                <img width="50" height="50" src="@answer.Image" />
                            </div>
                            <div class="col-xs-7 content">
                                <div class="form-group">
                                    <div class="checkbox-nice"><input type="checkbox" name="orders" value="@answer.AnswerId" id="checkbox@(Model.Id)@(answer.AnswerId)"><label for="checkbox@(Model.Id)@(answer.AnswerId)">@Html.Raw(answer.Answer)</label></div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-xs-7">
                                <div class="form-group">
                                    <div class="checkbox-nice"><input type="checkbox" name="orders" value="@answer.AnswerId" id="checkbox@(Model.Id)@(answer.AnswerId)"><label for="checkbox@(Model.Id)@(answer.AnswerId)">@Html.Raw(answer.Answer)</label></div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        if (!string.IsNullOrEmpty(answer.Image))
                        {
                            <div class="col-xs-1 time">
                                <img width="50" height="50" src="@answer.Image" />
                            </div>
                            <div class="col-xs-7 content">
                                <div class="form-group">
                                    <div class="radio"><input type="radio" name="orders" value="@answer.AnswerId" id="optionsRadios@(Model.Id)@(answer.AnswerId)"><label for="optionsRadios@(Model.Id)@(answer.AnswerId)">@Html.Raw(answer.Answer)</label></div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-xs-7 content">
                                <div class="form-group">
                                    <div class="radio"><input type="radio" name="orders" value="@answer.AnswerId" id="optionsRadios@(Model.Id)@(answer.AnswerId)"><label for="optionsRadios@(Model.Id)@(answer.AnswerId)">@Html.Raw(answer.Answer)</label></div>
                                </div>
                            </div>
                        }

                    }


                </div>
            }
        
    </div>
    <div class="row pull-left">
        <input type="submit" name="savevcg" class="poll_btn poll_btn_primary" value="Bỏ phiếu" />
        @if (Model.Published)
        {
            <a href="#" class="poll_btn poll_btn_primary resultpoll" data-questionid="@Model.Id">Xem kết quả</a>
        }
    </div>
}
