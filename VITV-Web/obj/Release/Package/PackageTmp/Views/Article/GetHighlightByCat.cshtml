@model List<ArticleHLCustomView>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>&nbsp;</th>
                <th><span>Tiêu đề</span></th>
                <th><span>Series</span></th>
                <th><span>Trạng thái</span></th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="article_@item.Id">
                    <td>@Html.Hidden("ids", item.Id)</td>
                    <td>
                        @if (!item.IsSeries)
                        {
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="table-link">
                                @Html.DisplayFor(modelItem => item.Name)
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Details", "ArticleSeries", new { id = item.Id })" class="table-link">
                                @Html.DisplayFor(modelItem => item.Name)
                            </a>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Series)
                    </td>
                    <td>
                        @if (!item.IsExpire)
                        {
                            <span class="label label-danger">Hết hạn</span>
                        }
                    </td>
                    <td style="width: 15%;">
                        <button type="button" class="btn btn-primary" id="btnHL@(item.Id)" data-toggle="modal" data-target="#highlightModal" data-id="@item.Id" data-hltype="1">Chỉnh sửa</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>