@model Recruit

<div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
        <div class="checkbox-nice">
            <input type="checkbox" id="IsRecruiting" name="IsRecruiting" value="true" @(Model == null || Model.Id == default(int) ? "" : (Model.IsRecruiting ? "checked" : ""))>
            <label for="IsRecruiting">@Html.DisplayNameFor(model => model.IsRecruiting)</label>
            <input name="IsRecruiting" type="hidden" value="false" />
        </div>
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Thumbnail, new { @class = "col-lg-2 control-label" })
    @Html.HiddenFor(model => model.Thumbnail)
    <div class="col-lg-10">
        <img id="photoView" width=400 height=400 src="@(Model != null && !String.IsNullOrEmpty(Model.Thumbnail) ? Model.Thumbnail : "")" />
        <input class="form-control" id="photoinput" type="file" name="thumbnail" accept="image/*">
    </div>
    @Html.ValidationMessageFor(model => model.Thumbnail, string.Empty, new { @class = "help-block" })
</div>

