@model GoldPriceView
@{
    ViewBag.Title = "Tỷ giá";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="market_main_page row">
    <div class="container">
        <div class="row">
            <div id="view_chart" class='with-transitions'>
                <svg></svg>
            </div>
        </div>

        <section class="panel single_market">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr class="table-col-name">
                                <th rowspan="2">Giá vàng SJC</th>
                                <th colspan="2" class="center">Hôm nay</th>
                                <th colspan="2" class="center">Hôm qua</th>
                            </tr>
                            <tr class="table-col-name">
                                <th class="center" width="15%">Mua vào</th>
                                <th class="center" width="15%">Bán ra</th>
                                <th class="center" width="15%">Mua vào</th>
                                <th class="center" width="15%">Bán ra</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(VITV.Web.Models.StoreInfo.GoldPriceVietNam gold in Model.SJCs)
                            {
                                string updown = gold.Buy > gold.YesterdayBuy ? "up" : (gold.Buy < gold.YesterdayBuy?"down":"");
                                <tr>
                                    <td class="left">@gold.Name</td>
                                    <td class="@updown">@gold.Buy.ToString("0,0.###")<span class="glyphicon glyphicon-arrow-@updown"></span></td>
                                    <td class="@updown">@gold.Sell.ToString("0,0.###")<span class="glyphicon glyphicon-arrow-@updown"></span></td>
                                    <td>@gold.YesterdayBuy.ToString("0,0.###")</td>
                                    <td>@gold.YesterdaySell.ToString("0,0.###")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>

