@model Keyword

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <div class="display-label">Value</div>
    <div class="display-field">@Model.Value</div>

    <div class="display-label">Videos</div>
    <div class="display-field">@(Model.Videos == null ? "None" : Model.Videos.Count.ToString())</div>

    <div class="display-label">Articles</div>
    <div class="display-field">@(Model.Articles == null ? "None" : Model.Articles.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Quay về trang quản lý", "Management")
</p>


