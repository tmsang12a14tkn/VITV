@model Article

@{
    Layout = "../Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-lg-12">
        <div class="main-box">
            <header class="main-box-header clearfix">
                <h2>
                    <a href="@ViewBag.returnUrl">
                        <i class="fa fa-arrow-left"></i>
                    </a>
                    Bạn có chắc chắn muốn xóa bài viết này?
                </h2>
            </header>
            <div class="main-box-body clearfix">
                @using (Html.BeginForm("Delete", "Article", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    //@((int)ViewBag.week > 0 ? "&weektab=" + ViewBag.week : "")
                    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, new { @class = "col-lg-2 control-label" })
                        <div class="col-lg-10 form-field-display">
                            @Html.DisplayFor(model => model.Title)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ArticleContent, new { @class = "col-lg-2 control-label" })
                        <div class="col-lg-10">
                            @Html.Raw(Model.ArticleContent)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-danger">Xóa</button>
                            @Html.ActionLink("Quay về trang quản lý", "Management")
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>