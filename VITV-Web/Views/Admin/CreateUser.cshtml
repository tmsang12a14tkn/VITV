@model CreateUserModel
@using Microsoft.AspNet.Identity.EntityFramework
@{
    Layout = "../Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Tạo người dùng";
    List<IdentityRole> lstRoles = (List<IdentityRole>)ViewBag.PossibleRoles;
}

<div class="row">
    <div class="col-lg-12">
        <div class="main-box">
            <header class="main-box-header clearfix">
                <h2>Tạo mới người dùng</h2>
            </header>
            <div class="main-box-body clearfix">
                @using (Html.BeginForm("CreateUser", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.ValidationSummary(true)
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-lg-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-lg-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2 control-label">
                            <label>Vai trò</label>
                        </div>
                        <div class="col-lg-10">

                            @foreach (var role in lstRoles)
                            {
                                <div class="checkbox-nice">
                                    <input type="checkbox" id="checkbox_@role.Name" name="Roles" value="@role.Id">
                                    <label for="checkbox_@role.Name">
                                        @role.Name
                                    </label>
                                </div>
                            }

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-success">Hoàn thành</button>
                            @Html.ActionLink("Quay về trang quản lý", "Management")
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


