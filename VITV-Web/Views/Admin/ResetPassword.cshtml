@model ResetPasswordModel
@{
    Layout = "../Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Tạo lại mật khẩu";
}

<div class="row">
    <div class="col-lg-12">
        <div class="main-box">
            <header class="main-box-header clearfix">
                <h2>Tạo lại mật khẩu</h2>
            </header>
            <div class="main-box-body clearfix">
                @using (Html.BeginForm("ResetPassword", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.ValidationSummary(true)
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.UserId)
                    <div class="form-group">
                        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-lg-10">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmNewPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-lg-10">
                            @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-success">Tạo lại</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>