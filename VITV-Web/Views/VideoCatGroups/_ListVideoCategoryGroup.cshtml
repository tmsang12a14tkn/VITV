@model VideoCatGroup

@{
    List<VideoCategory> lstVideoCates = ((List<VideoCategory>)ViewBag.videocategories).Where(c => c.GroupId == Model.Id).ToList();
}

    
<thead class="theadvideo" id="theadvideocatgroup@(Model.Id)">
    <tr>
        <th>
            <div class="row">
                <div class="col-sm-2">
                    <div class="filter-block pull-left">
                        <a href="#" class="table-link settingcatgroup" id="ordereditvc" data-vcgid="@Model.Id" title="">
                            <span class="fa-stack" title="Lưu thứ tự chuyên mục">
                                <i class="fa fa-square fa-stack-2x"></i>
                                <i class="fa fa-save fa-stack-1x fa-inverse fa-2x settingcatgroupchild" id="saveordereditvc@(Model.Id)"></i>
                            </span>
                        </a>
                        <a href="/VideoCategory/Create?groupId=@Model.Id" target="_blank" class="table-link settingcatgroup" title="Thêm mới chuyên mục">
                            <span class="fa-stack" title="Thêm mới chuyên mục">
                                <i class="fa fa-square fa-stack-2x"></i>
                                <i class="fa fa-plus fa-stack-1x fa-inverse fa-2x settingcatgroupchild"></i>
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </th>
        <th><span></span></th>
        <th><span></span></th>
        <th>
        </th>
    </tr>
</thead>

    
<tbody class="sortablecatgroup" id="tbodyvcg@(Model.Id)" data-vcgid="@Model.Id">
    @foreach (VideoCategory c in lstVideoCates.OrderBy(videoCat => videoCat.Order))
    {

        <tr class="tbodyvideo" data-vcid="@c.Id">
            <td>
                <img src="@c.ProfilePhoto" alt="" width="70" height="50">
                <p style="word-wrap: break-word"><b><a href="/VideoCategory/Edit/@(c.Id)">@c.Name</a></b></p>
            </td>
            <td>
                @(c.Videos == null ? "None" : c.Videos.Count.ToString(CultureInfo.InvariantCulture))
            </td>
            <td style="width: 20%;">
                <a href="@Url.Action("Delete", "VideoCategory", new { id = c.Id })" class="table-link danger">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </td>
        </tr>
    }
</tbody>





