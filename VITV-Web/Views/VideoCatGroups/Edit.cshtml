@model VideoCatGroup

@{
    ViewBag.Title = "Chỉnh sửa nhóm chuyên mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="main-box">
            <header class="main-box-header clearfix">
                <h2>Chỉnh sửa nhóm chuyên mục</h2>
            </header>
            <div class="main-box-body clearfix">
                @using (Html.BeginForm("Edit", "VideoCatGroups", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    @Html.HiddenFor(model => model.Id)
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "col-lg-2 control-label" })
                        <div class="col-lg-10">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name, string.Empty, new { @class = "help-block" })
                        </div>
                    </div>

                    @Html.HiddenFor(model => model.Order)

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-success">Hoàn thành</button>
                            @Html.ActionLink("Quay về trang quản lý", "Index")
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>