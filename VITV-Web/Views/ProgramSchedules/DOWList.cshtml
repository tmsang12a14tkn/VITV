@model DowScheduleView

<header class="main-box-header clearfix">
    <div class="filter-block pull-right">
        <a class="btn btn-success pull-right" data-ajax="true" data-ajax-method="Get" data-ajax-mode="replace" data-ajax-update="#addField-@Model.DayOfWeek" href="/ProgramSchedules/Create?dayOfWeek=@Model.DayOfWeek">
            <i class="fa fa-plus fa-lg"></i> Thêm mới
        </a>
    </div>
</header>
<div id="addField-@Model.DayOfWeek"></div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th><span>Thời gian</span></th>
                <th><span>Tên chương trình</span></th>
                <th><span>Chiếu mới</span></th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProgramSchedules)
            {
                <tr id="programschedules_@item.Id">
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })">
                            @Html.DisplayFor(modelItem => item.VideoCategory.Name)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsNew)
                    </td>
                    <td style="width: 15%;">

                        <a href="@Url.Action("Delete", new { id = item.Id })"
                           data-toggle="modal"
                           data-target="#deleteModal"
                           data-ajax="true"
                           data-ajax-complete=""
                           data-ajax-mode="replace"
                           data-ajax-update="#delete-content"
                           class="table-link danger">
                            <span class="fa-stack">
                                <i class="fa fa-square fa-stack-2x"></i>
                                <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                            </span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
