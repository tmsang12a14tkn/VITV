@model ProgramSchedule

@{
    ViewBag.Title = "Chỉnh sửa chương trình";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="main-box">
            <header class="main-box-header clearfix">
                <h2>Chỉnh sửa chương trình</h2>
            </header>
            <div class="main-box-body clearfix">
                @using (Html.BeginForm("Edit", "ProgramSchedules", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Partial("_CreateOrEdit", Model)

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-success"><span class="fa fa-check"></span> Hoàn thành</button>
                            @Html.ActionLink("Quay về trang quản lý", "Index", new { dayOfWeek = Model.DayOfWeek })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>