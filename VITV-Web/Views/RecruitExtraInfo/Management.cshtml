@model IEnumerable<RecruitExtraInfo>

@{
    ViewBag.Title = "Thông tin thêm về tuyển dụng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="main-box clearfix">
            <header class="main-box-header clearfix">
                <h2 class="pull-left">Quản lý thông tin thêm cho tuyển dụng</h2>
            </header>
            <div class="main-box-body clearfix">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th class="text-center"><span>Tiêu đề</span></th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><a href="@Url.Action("Edit", new { id = item.Id })" class="table-link">@item.Name</a></td>
                                    <td style="width: 15%;">
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#sidebar-nav #recruitMng').toggleClass("active");
        $('#sidebar-nav #recruitMng').siblings().removeClass("active");

        $('#sidebar-nav a#re-li-3').toggleClass("active");
        $('#sidebar-nav a#re-li-3').parent().siblings().removeClass("active");
    </script>
}