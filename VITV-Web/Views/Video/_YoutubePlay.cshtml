@model Video




<div class="row">
    <div class="">
        <input type="text" class="form-control" id="youtubeurl" placeholder="Đường dẫn youtube" value="">
    </div>
</div>
<div class="row">
    <div class="radio">
        <input type="radio" name="optionsRadios" id="optionsRadios1" value="0" checked="">
        <label for="optionsRadios1">
            Từ youtube
        </label>
    </div>
    <div class="radio">
        <input type="radio" name="optionsRadios" id="optionsRadios2" value="1">
        <label for="optionsRadios2">
            Từ lưu trữ VITV
        </label>
    </div>
</div>
<div class="row">
    <div class="">
        <input type="button" id="saveyoutubeplay" name="saveyoutubeplay" class="btn btn-primary" data-videoid="31056" value="Lưu thay đổi">
    </div>
</div>


<div class="form-group">
    <label>Radio inputs</label>
    <div class="radio">
        <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked="">
        <label for="optionsRadios1">
            Option one is this and that—be sure to include why it's great
        </label>
    </div>
    <div class="radio">
        <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
        <label for="optionsRadios2">
            Option two can be something else and selecting it will deselect option one
        </label>
    </div>
</div>